<div class="container">
<h1>EDIT POST</h1>

	<%= form_for @edit_post, url: main_app.edit_post_path do |f| %>
	Title: <%= f.text_field :title %><br>
	Image Link: <%= f.text_field :img %><br>
	Body: <%= f.text_area :body, size: "80x15"  %><br>

	<%= f.submit "Edit Post", :class => "button" %>

	<%= link_to ("<button>DELETE POST</button>").html_safe, main_app.fool_path, method: :delete, data: { confirm: "You can not undo this action! Are you sure you want to delete???" } %>

<% end %>
</div>